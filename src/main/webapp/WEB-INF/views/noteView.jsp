<script>
    // Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Í¥ÄÎ†® JavaScript
    document.addEventListener('DOMContentLoaded', function () {
        const noteId = `${note.noteId}`;
        console.log(noteId)
        const checklistContainer = document.getElementById('checklist-list-container');
        const newChecklistContentInput = document.getElementById('newChecklistContent');
        const addChecklistBtn = document.getElementById('addChecklistBtn');

        // Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Î™©Î°ù Î°úÎìú Ìï®Ïàò
        function loadChecklists() {
            fetch('<c:url value="/api/checklist/list/"/>' + noteId)
                .then(response => {
                    if (!response.ok) {
                        if (response.status === 401 || response.status === 403) {
                            return response.text().then(text => {
                                throw new Error(text || 'Ïù∏Ï¶ù/Í∂åÌïú Ïò§Î•ò');
                            });
                        }
                        return response.text().then(text => {
                            throw new Error(text || 'Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Î°úÎìú Ïã§Ìå®');
                        });
                    }
                    return response.json();
                })
                .then(checklists => {
                    console.log('ÏÑúÎ≤ÑÏóêÏÑú Î∞õÏùÄ Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏:', checklists);
                    checklistContainer.innerHTML = '';
                    if (checklists.length === 0) {
                        checklistContainer.innerHTML = '<li>ÏïÑÏßÅ Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Ìï≠Î™©Ïù¥ ÏóÜÏäµÎãàÎã§. Ï∂îÍ∞ÄÌï¥Î≥¥ÏÑ∏Ïöî!</li>';
                    } else {
                        checklists.forEach(item => {
                            console.log('content before li:', item.content);
                            const li = document.createElement('li');
                            li.dataset.id = item.checkListId;
                            li.innerHTML = `
                                <input type="checkbox" class="checklist-checkbox" ${item.checked ? 'checked' : ''}>
                                <span class="checklist-content ${item.checked ? 'checked' : ''}" style="color: black; background: yellow;">ÌÖåÏä§Ìä∏Í∞í</span>
                                <div class="checklist-actions">
                                    <a href="#" class="btn delete-checklist-btn">ÏÇ≠Ï†ú</a>
                                </div>
                            `;
                            console.log('li.innerHTML:', li.innerHTML);
                                    let checked = `${item.checked}`;
                                    let content = `${item.content}`;
                                    console.log('checked' + checked);
                                    console.log('content' + content);
                                    console.log('li:' + li)
                            checklistContainer.appendChild(li);
                        });
                    }
                })
                .catch(error => {
                    console.error('Error loading checklists:', error);
                    alert('Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Î°úÎìú Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§: ' + error.message);
                    if (error.message.includes('Î°úÍ∑∏Ïù∏') || error.message.includes('Í∂åÌïú')) {
                        window.location.href = '<c:url value="/login"/>';
                    }
                });
        }

        // ÏÉà Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Ìï≠Î™© Ï∂îÍ∞Ä Ìï®Ïàò
        addChecklistBtn.addEventListener('click', function () {
            const content = newChecklistContentInput.value.trim();
            if (content === '') {
                alert('Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ ÎÇ¥Ïö©ÏùÑ ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }

            fetch('<c:url value="/api/checklist"/>', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    noteId: noteId,
                    content: content,
                    isChecked: false
                })
            })
                .then(response => {
                    if (!response.ok) {
                        if (response.status === 401 || response.status === 403) {
                            return response.text().then(text => {
                                throw new Error(text || 'Ïù∏Ï¶ù/Í∂åÌïú Ïò§Î•ò');
                            });
                        }
                        return response.text().then(text => {
                            throw new Error(text || 'Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Ï∂îÍ∞Ä Ïã§Ìå®');
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    newChecklistContentInput.value = '';
                    loadChecklists();
                })
                .catch(error => {
                    console.error('Error adding checklist:', error);
                    alert('Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Ï∂îÍ∞Ä Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§: ' + error.message);
                    if (error.message.includes('Î°úÍ∑∏Ïù∏') || error.message.includes('Í∂åÌïú')) {
                        window.location.href = '<c:url value="/login"/>';
                    }
                });
        });

        // Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Ìï≠Î™© Ïù¥Î≤§Ìä∏ ÏúÑÏûÑ (Ï≤¥ÌÅ¨Î∞ïÏä§ ÌÜ†Í∏Ä, ÏÇ≠Ï†ú Î≤ÑÌäº)
        checklistContainer.addEventListener('change', function (event) {
            if (event.target.classList.contains('checklist-checkbox')) {
                const li = event.target.closest('li');
                const checklistId = li.dataset.id;
                const isChecked = event.target.checked;

                fetch('<c:url value="/api/checklist/"/>' + checklistId, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({isChecked: isChecked})
                })
                    .then(response => {
                        if (!response.ok) {
                            if (response.status === 401 || response.status === 403) {
                                return response.text().then(text => {
                                    throw new Error(text || 'Ïù∏Ï¶ù/Í∂åÌïú Ïò§Î•ò');
                                });
                            }
                            return response.text().then(text => {
                                throw new Error(text || 'Ï≤¥ÌÅ¨ ÏÉÅÌÉú ÏóÖÎç∞Ïù¥Ìä∏ Ïã§Ìå®');
                            });
                        }
                        const contentSpan = li.querySelector('.checklist-content');
                        if (isChecked) {
                            contentSpan.classList.add('checked');
                        } else {
                            contentSpan.classList.remove('checked');
                        }
                    })
                    .catch(error => {
                        console.error('Error toggling checklist completion:', error);
                        alert('Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ ÏÉÅÌÉú ÏóÖÎç∞Ïù¥Ìä∏ Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§: ' + error.message);
                        if (error.message.includes('Î°úÍ∑∏Ïù∏') || error.message.includes('Í∂åÌïú')) {
                            window.location.href = '<c:url value="/login"/>';
                        }
                    });
            }
        });

        checklistContainer.addEventListener('click', function (event) {
            // ÏÇ≠Ï†ú Î≤ÑÌäº ÌÅ¥Î¶≠
            if (event.target.classList.contains('delete-checklist-btn')) {
                event.preventDefault();
                if (!confirm('Ï†ïÎßê Ïù¥ Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Ìï≠Î™©ÏùÑ ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?')) {
                    return;
                }

                const li = event.target.closest('li');
                const checklistId = li.dataset.id;

                fetch('<c:url value="/api/checklist/"/>' + checklistId, {
                    method: 'DELETE'
                })
                    .then(response => {
                        if (!response.ok) {
                            if (response.status === 401 || response.status === 403) {
                                return response.text().then(text => {
                                    throw new Error(text || 'Ïù∏Ï¶ù/Í∂åÌïú Ïò§Î•ò');
                                });
                            }
                            return response.text().then(text => {
                                throw new Error(text || 'Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ ÏÇ≠Ï†ú Ïã§Ìå®');
                            });
                        }
                        return response.text();
                    })
                    .then(message => {
                        li.remove();
                        if (checklistContainer.children.length === 0 || (checklistContainer.children.length === 1 && checklistContainer.children[0].textContent.includes('ÏïÑÏßÅ Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Ìï≠Î™©Ïù¥ ÏóÜÏäµÎãàÎã§'))) {
                            checklistContainer.innerHTML = '<li>ÏïÑÏßÅ Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ Ìï≠Î™©Ïù¥ ÏóÜÏäµÎãàÎã§. Ï∂îÍ∞ÄÌï¥Î≥¥ÏÑ∏Ïöî!</li>';
                        }
                    })
                    .catch(error => {
                        console.error('Error deleting checklist:', error);
                        alert('Ï≤¥ÌÅ¨Î¶¨Ïä§Ìä∏ ÏÇ≠Ï†ú Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§: ' + error.message);
                        if (error.message.includes('Î°úÍ∑∏Ïù∏') || error.message.includes('Í∂åÌïú')) {
                            window.location.href = '<c:url value="/login"/>';
                        }
                    });
            }
            // ÎÇ¥Ïö© ÌÅ¥Î¶≠ Ïãú ÏàòÏ†ï Í∞ÄÎä•ÌïòÎèÑÎ°ù (ÏÑ†ÌÉù ÏÇ¨Ìï≠ - Í≥†Í∏â Í∏∞Îä•)
            if (event.target.classList.contains('checklist-content')) {
                const span = event.target;
                const originalContent = span.textContent;
                const li = span.closest('li');
                const checklistId = li.dataset.id;

                const input = document.createElement('input');
                input.type = 'text';
                input.value = originalContent;
                input.style.width = 'calc(100% - 100px)';
                input.style.padding = '5px';
                input.style.border = '1px solid #ccc';
                input.style.borderRadius = '3px';
                span.replaceWith(input);
                input.focus();

                input.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter') {
                        input.blur();
